<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="242dp"
        android:layout_below="@+id/tvRuleDes"
        android:padding="10dp"
        android:background="@drawable/medrecord_bg_f7f7f7_b_4"
        android:layout_marginTop="16dp">


        <com.ly.measureangleview.LineChartMarkerClick
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.ly.measureangleview.LineChartMarkerClick>


    </FrameLayout>
</LinearLayout>